---
export interface Props {
    title: string;
}
---

<header
    class="relative flex items-center justify-between max-w-4xl h-full py-20"
>
    <a href="/" class="flex gap-3 justify-center items-center">
        <img
            class="h-15 shadow-lg shadow-gray-900 aspect-square rounded-full"
            src={`https://github.com/${import.meta.env.GITHUB_USER}.png`}
        />
        <span> etherbeing </span>
    </a>
    <nav id="nav-breadcrumb" class="font-bold uppercase cursor-default">
        <span>
            <a href="/"> Home </a>
        </span>
        <span>
            {Astro.props.title}
        </span>
    </nav>
</header>
<style>
    #nav-breadcrumb > span:not(:first-child)::before {
        content: " > ";
    }
</style>
